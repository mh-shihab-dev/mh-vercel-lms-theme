 <script>
      document.addEventListener("DOMContentLoaded", () => {
        //   course preview video play handle
        const playBtn = document.querySelector(".course_video_play_btn");
        const coursePreviewImg = document.querySelector(
          ".course_video_thumbnail",
        );
        const coursePreviewVideo = document.querySelector(
          ".course_preview_video",
        );

        playBtn.addEventListener("click", () => {
          // Hide image & button
          coursePreviewImg.style.display = "none";
          playBtn.style.display = "none";

          // Show video with fade effect
          coursePreviewVideo.style.display = "block";
          setTimeout(() => {
            coursePreviewVideo.style.opacity = "1";
          }, 50);

          // Auto play video
          coursePreviewVideo.play();
        });
      });
    </script>