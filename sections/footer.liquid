<style>
    .mh_footer {
  padding: 0 16px 38px;
  background-color: #000;
}

.mh_footer .footer_container {
  max-width: 1300px;
  margin: 0 auto;
  padding: 32px 0 0;
  border-top: 1px solid rgba(248, 159, 159, 0.1);
}

.mh_footer .footer_grid {
  display: grid;
  grid-template-columns: repeat(6, 1fr);
  gap: 20px;
  margin: 0 0 40px;
}

.mh_footer .footer_column_title {
  color: rgba(255, 255, 255, 1);
  font-family: "Geist", sans-serif;
  font-size: 17.58px;
  font-weight: 700;
  line-height: 28px;
  letter-spacing: normal;
  margin: 0 0 17px;
}

.mh_footer .footer_column .footer_links li {
  list-style: none;
  margin: 0 0 8px;
}

.mh_footer .footer_column .footer_links li a {
  color: rgba(255, 255, 255, 1);
  font-family: "Geist", sans-serif;
  font-size: 13.89px;
  font-weight: 400;
  line-height: 22px;
  letter-spacing: normal;
  text-decoration: none;
}

.mh_footer .footer_bottom {
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding: 24px 0 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 8px;
}

.mh_footer .footer_language {
  display: flex;
  align-items: center;
}

.mh_footer .footer_language_label {
  display: flex;
  align-items: center;
  gap: 8px;
  color: #fff;
  font-family: "Geist", sans-serif;
  font-size: 15.88px;
  font-weight: 400;
  line-height: 24px;
}

.mh_footer .footer_language_select {
  background: transparent;
  border: none;
  outline: none;
  color: #fff;
  font-family: "Geist", sans-serif;
  font-size: 15.88px;
  font-weight: 400;
  line-height: 24px;
}

.mh_footer .footer_language_select option {
  color: #000;
  background: #fff;
}

.mh_footer .footer_language_select option:checked {
  color: #fff;
  background: #000;
}

.mh_footer .footer_social {
  display: flex;
  align-items: center;
  gap: 15px;
}

/* Responsive styles */
@media screen and (max-width: 1200px) {
  .mh_footer .footer_grid {
    grid-template-columns: repeat(5, 1fr);
  }
}

@media screen and (max-width: 1024px) {
  .mh_footer .footer_grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

@media screen and (max-width: 768px) {
  .mh_footer .footer_grid {
    grid-template-columns: repeat(3, 1fr);
  }
}

@media screen and (max-width: 545px) {
  .mh_footer .footer_grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media screen and (max-width: 400px) {
  .mh_footer .footer_grid {
    grid-template-columns: repeat(1, 1fr);
    text-align: center;
  }
  .mh_footer .footer_bottom {
    padding: 16px 0 0;
    flex-direction: column;
    gap: 20px;
  }
}

</style>

<footer class="mh_footer">
  <div class="footer_container">
    <div class="footer_grid">

      <!-- Brand -->
      <a href="{{ routes.root_url }}" class="footer_brand">
        <h2 class="footer_brand_logo">
          {% if section.settings.logo != blank %}
            <img 
              src="{{ section.settings.logo | image_url: width: 200 }}" 
              alt="{{ shop.name }}"
              loading="lazy"
            >
          {% else %}
            {{ shop.name }}
          {% endif %}
        </h2>
      </a>

      <!-- Footer Menus -->
      {% for block in section.blocks %}
        {% case block.type %}

          {% when 'menu' %}
            {% if block.settings.menu != blank %}
              <section class="footer_column">
                <h3 class="footer_column_title">
                  {{ block.settings.title }}
                </h3>
                <ul class="footer_links">
                  {% for link in block.settings.menu %}
                    <li>
                      <a href="{{ link.url }}">
                        {{ link.title }}
                      </a>
                    </li>
                  {% endfor %}
                </ul>
              </section>
            {% endif %}

        {% endcase %}
      {% endfor %}

    </div>
  </div>

  <div class="footer_bottom">

    <!-- Language -->
    <div class="footer_language">
      <label class="footer_language_label">
        üåê Language:
      </label>
      <select class="footer_language_select">
        <option value="en">English</option>
        <option value="bn">‡¶¨‡¶æ‡¶Ç‡¶≤‡¶æ</option>
      </select>
    </div>

    <!-- Social Icons -->
    <div class="footer_social">
      {% for block in section.blocks %}
        {% if block.type == 'social' %}
          <a 
            href="{{ block.settings.url }}" 
            class="footer_social_icon" 
            target="_blank" 
            rel="noopener"
          >
            {% if block.settings.icon != blank %}
              <img 
                src="{{ block.settings.icon | image_url: width: 40 }}" 
                alt="social"
                loading="lazy"
              >
            {% endif %}
          </a>
        {% endif %}
      {% endfor %}
    </div>

  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Footer Logo"
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Footer Menu Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column Title",
          "default": "Company"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Select Menu"
        }
      ]
    },
    {
      "type": "social",
      "name": "Social Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Social Icon Image"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Social Link"
        }
      ]
    }
  ],
  "max_blocks": 25,
  "presets": [
    {
      "name": "Footer"
    }
  ]
}
{% endschema %}